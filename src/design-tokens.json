  "sizing": {
    "sidebar": {
      "width": "256px",
      "logoSize": "40px"
    },
    "mobileHeader": {
      "height": "64px"
    },
    "container": {
      "maxWidth": "1600px"
    },
    "components": {
      "button": {
        "sm": { "height": "32px", "paddingX": "12px", "fontSize": "12px" },
        "md": { "height": "36px", "paddingX": "16px", "fontSize": "14px" },
        "lg": { "height": "40px", "paddingX": "20px", "fontSize": "14px" }
      },
      "input": {
        "sm": { "height": "32px", "paddingX": "8px", "fontSize": "12px" },
        "md": { "height": "36px", "paddingX": "12px", "fontSize": "14px" }
      },
      "icon": {
        "sm": "16px",
        "md": "20px",
        "lg": "24px"
      }
    }
  },
  "borders": {
    "radius": {
      "none": "0px",
      "sm": "4px",
      "DEFAULT": "6px",
      "md": "8px",
      "lg": "12px",
      "card": "12px",
      "xl": "16px",
      "full": "9999px"
    },
    "width": {
      "none": "0px",
      "DEFAULT": "1px",
      "2": "2px"
    },
    "color": {
      "DEFAULT": "#e2e8f0",
      "focus": "#f59e0b",
      "error": "#ef4444"
    }
  },
  "shadows": {
    "none": "none",
    "subtle": "0 1px 3px 0 rgb(0 0 0 / 0.05)",
    "card": "0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)",
    "cardHover": "0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)",
    "elevated": "0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)"
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "DEFAULT": "200ms",
      "slow": "300ms"
    },
    "easing": {
      "DEFAULT": "ease-in-out",
      "in": "ease-in",
      "out": "ease-out"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px"
  },
  "zIndex": {
    "base": 0,
    "dropdown": 10,
    "sidebar": 40,
    "mobileNav": 50,
    "overlay": 50,
    "modal": 50,
    "tooltip": 60
