    },
    "fontSize": {
      "2xs": "10px",
      "xs": "12px",
      "sm": "14px",
      "base": "16px",
      "lg": "18px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "30px"
    },
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.25,
      "snug": 1.375,
      "normal": 1.5,
      "relaxed": 1.625
    },
    "letterSpacing": {
      "tight": "-0.025em",
      "normal": "0",
      "wide": "0.025em"
    },
    "textStyles": {
      "logo": {
        "fontSize": "20px",
        "fontWeight": 700,
        "color": "#ffffff"
      },
      "pageTitle": {
        "fontSize": "24px",
        "fontWeight": 700,
        "lineHeight": 1.25,
        "color": "#0f172a"
      },
      "sectionTitle": {
        "fontSize": "18px",
        "fontWeight": 600,
        "lineHeight": 1.375,
        "color": "#1e293b"
      },
      "cardHeader": {
        "fontSize": "12px",
        "fontWeight": 600,
        "color": "#ffffff",
        "textTransform": "none"
      },
      "label": {
        "fontSize": "12px",
        "fontWeight": 600,
        "color": "#64748b"
      },
      "body": {
        "fontSize": "14px",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "color": "#334155"
      },
      "bodySmall": {
        "fontSize": "12px",
        "fontWeight": 400,
        "lineHeight": 1.5,
        "color": "#475569"
